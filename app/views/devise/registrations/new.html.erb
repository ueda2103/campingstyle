<h2 class="offset-1 col-5 mt-5">新規会員登録</h2>
<%= render "devise/shared/links" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "mt-5 sign-up-form"}) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="user-icon__wrapper">
    <%= image_tag @user.user_image.thumb.url, size: "100x100", class: "user-icon" %>
    <button>
      <%= f.file_field :user_image, accept: 'image/jpeg,image/gif,image/png' %>
    </button>
  </div>

  <table>
    <tbody>
      <tr>
        <td><%= f.label :family_name, "名前" %></td>
        <td>(姓)</td>
        <td><%= f.text_field :family_name, autofocus: true, autocomplete: "family_name" %></td>
        <td><%= f.label :given_name, "(名)" %></td>
        <td><%= f.text_field :given_name, autofocus: true, autocomplete: "given_name" %></td>
      </tr>
      <tr>
        <td><%= f.label :family_name_kana, "フリガナ" %></td>
        <td>(セイ)</td>
        <td><%= f.text_field :family_name_kana, autofocus: true, autocomplete: "family_name_kana" %></td>
        <td><%= f.label :given_name_kana, "(メイ)" %></td>
        <td><%= f.text_field :given_name_kana, autofocus: true, autocomplete: "given_name_kana" %></td>
      </tr>
      <tr>
        <td><%= f.label :email, "メールアドレス" %></td>
        <td></td>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>
      <tr>
        <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
        <td></td>
        <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %></td>
      </tr>
      <tr>
        <td><%= f.label :prefecture_code, "都道府県" %></td>
        <td></td>
        <td><%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :name, :name, autofocus: true %></td>
      </tr>
      <tr>
        <td><%= f.label :city, "市区町村" %></td>
        <td></td>
        <td><%= f.text_field :city, autofocus: true, autocomplete: "city" %></td>
      </tr>
      <tr>
        <td><%= f.label :street, "番地" %></td>
        <td></td>
        <td><%= f.text_field :street, autofocus: true, autocomplete: "street" %></td>
      </tr>
      <tr>
        <td><%= f.label :building, "建物" %></td>
        <td></td>
        <td><%= f.text_field :building, autofocus: true, autocomplete: "building" %></td>
      </tr>
      <tr>
        <td><%= f.label :telephone_number, "電話番号(ハイフンなし)" %></td>
        <td></td>
        <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number" %></td>
      </tr>
      <tr>
        <td>
          <%= f.label :password, "パスワード" %>
          <% if @minimum_password_length %>
          (<%= @minimum_password_length %> 文字以上)
          <% end %>
        </td>
        <td></td>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
      <tr>
        <td><%= f.label :password_confirmation, "パスワード (確認用)" %></td>
        <td></td>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
    </tbody>
  </table>

  <div class="sign-up-form__field">
    <%= f.submit "新規登録", class: "btn_green" %>
  </div>
<% end %>
