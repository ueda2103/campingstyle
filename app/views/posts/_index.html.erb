<h2><%= title %></h2>

<%= form_with url: posts_path, method: :get, local: true do |f| %>
  <%= f.text_field :search %>
  <%= f.submit "検索", class: "btn_blue" %>
<% end %>

<div class="card-box">
  <% posts.each do |post| %>
    <div class="card py-4">

      <%= link_to post_path(post.id) do %>
        <%= image_tag post.post_images.thumb.url, size: "250x200", class: "post-image" %>
      <% end %>

        <p class="card-title"><%= post.title %></p>

          <div class="favorite_<%= post.id %>">
            <%= render "favorites/favorite", post: post %>
          </div>

          <p class="d-inline-block">
            <i class="fas fa-comment fa-blue"></i>
            <%= post.comments.count %>件
          </p>

          <p class="d-inline-block">
            <i class="fas fa-paw fa-brown"></i>
            <%= post.footprint %>件
          </p>

        </div>

        <div class="user-body px-4">

          <%= link_to user_path(post.user_id) do %>
            <%= image_tag post.user.user_image.thumb.url, size: "70x70", class: "user-icon" %>
          <% end %>

          <div class="user-body__text">
            <p><%= post.user.family_name + post.user.given_name %></p>

            <div class="follow">

              <% if Relationship.find_by(followed_id: current_user.id, follower_id: post.user_id) %>

                <%= link_to "フォローを外す", relationship_path(Relationship.find_by(followed_id: current_user.id, follower_id: post.user_id), user_id: post.user_id), method: :delete, class: "btn_red" %>

              <% else %>

                <%= link_to "フォロー", relationships_path(user_id: post.user_id), method: :post, class: "btn_blue" %>

              <% end %>

            </div>

            <div class="bookmark_<%= post.id %>">
              <%= render "bookmarks/bookmark", post: post %>
            </div>
            
          </div>
        </div>
    </div>
  <% end %>
</div>
