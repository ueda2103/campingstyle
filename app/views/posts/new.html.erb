<%# 新規投稿ページ %>
<main>
  <div class="container">
    <div class="row">
      <h2 class="my-3">新規投稿</h2>

      <%= form_with model: @post, local: true, class: "post-recipe__body d-flex col-12" do |f| %>

        <%# ページ左側 %>
        <div class="post-recipe__left">

          <%# タイトル入力フォーム %>
          <div class="title">
            <%= f.label :title, "タイトル", class: "need" %>
            <%= render "/shared/flash" %>
            <%= f.text_field :title, autofocus: true %>
            <% if @post.errors.include?(:title) %>
              <span class="red"><%= @post.errors.full_messages_for(:title).first %></span>
            <% end %>
          </div>

          <%# 画像投稿フォーム %>
          <div class="img my-4">
            <div class="img-box mb-2">
              <%= image_tag @post.post_images[0].to_s, size: "550x350", class: "main-img img_prev" %>
            </div>
            <button>
              <%= f.file_field :post_images, multiple: true, class: "img need_long" %>
            </button>
            <% if @post.errors.include?(:post_images) %>
              <span class="red"><%= @post.errors.full_messages_for(:post_images).first %></span>
            <% end %>
          </div>
        </div>

        <%# ページ右側 %>
        <div class="post-recipe__right">

          <%# タグ付けフォーム %>
          <div class="tag">
            <%= f.label :tag_list, "タグ" %>
            <%= f.text_field :tag_list, id: "tags" %>
          </div>

          <%# 本文入力フォーム %>
          <div class="text my-4">
            <%= f.label :body, "内容", class: "need" %>
            <%= f.text_area :body, autofocus: true %>
            <% if @post.errors.include?(:body) %>
              <span class="red"><%= @post.errors.full_messages_for(:body).first %></span>
            <% end %>
          </div>

          <%= f.submit "投稿", class: "btn_blue" %>
        </div>
      <% end %>
    </div>
  </div>
</main>
