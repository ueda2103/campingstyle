<main>
  <div class="container">
    <div class="row">
      <%# マイページサイドバー %>
      <div class="user__info col-2 mt-2 px-3">
        <% if @user == current_user %>
          <%= render "mypage_sidebar", user: current_user %>
        <% else %>
          <%= render "show_sidebar", user: @user %>
        <% end %>
      </div>

      <%# マイページレシピ一覧メイン %>
      <div class="post-recipe-index col-10 mt-2 px-3">
        <%= render "/recipes/index", title: @title, recipes: @recipes %>
      </div>
    </div>
  </div>
</main>
