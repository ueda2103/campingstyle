                <% else %>
                  <%= link_to "ブックマーク", bookmarks_path(recipe_id: r.id), method: :recipe, class: "btn_blue" %>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>