<main class="main__background main__background__post">
  <div class="container">
    <div class="row">
      <%# マイページサイドバー %>
      <div class="user__info col-12 col-sm-2 bg-white my-4 py-4">
        <% if @user == current_user %>
          <%= render "mypage_sidebar", user: current_user %>
        <% else %>
          <%= render "show_sidebar", user: @user %>
        <% end %>
      </div>

      <%# マイページ投稿一覧メイン %>
      <div class="post-recipe-index col-12 col-sm-10 bg-white p-4 my-4">
        <%= render "/posts/index", title: @title, posts: @posts %>
      </div>
    </div>
  </div>
</main>
